<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.javafx.events.Controller"
          hgap="10" vgap="10" >
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased"/>
    <Button fx:id="helloButton" text="こんにちは" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonClicked" />
    <Button fx:id="byeButton" text="じゃあまたね" GridPane.rowIndex="1" GridPane.columnIndex="1"
            onAction="#onButtonClicked" />
    <CheckBox text="Clear the field after saying こんにちは・じゃあまたね。" GridPane.rowIndex="2"
              GridPane.columnIndex="0" GridPane.columnSpan="2" fx:id="ourCheckBox" onAction="#handleChange" />
    <Label fx:id="eventLabel1" text="Nothing has happened yet." GridPane.rowIndex="3" GridPane.columnIndex="0" />
</GridPane>
